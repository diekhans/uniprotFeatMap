#!/usr/bin/env python3

# import os
import os.path as osp
import sys
import argparse
# import pipettor
from pycbio.sys import cmdOps

sys.path.insert(0, osp.normpath(osp.join(osp.dirname(__file__), "../lib")))

def parseArgs():
    desc = """Compare protein annotations between assemblies.  This find the
    difference between a source reference genome and another target assembly.
    This looks at both mapped annotations and annotations from other sources,
    such as native UniProt and InterProScan.
    """

    parser = argparse.ArgumentParser(description=desc)



    parser.add_argument("srcTargetMRnaPsl",
                        help="""alignments of source to target transcripts from xspeciesTrans2TransMap""")
    return cmdOps.parse(parser)


def xspeciesCompare(opts, srcTargetMRnaPsl):
    pass

def main():
    opts, args = parseArgs()
    with cmdOps.ErrorHandler():
        xspeciesCompare()

main()
